@model firstApplication.Models.BlogPostsV2

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Create.css" />
}
<div class="row">
    <div class="col-md-12 mt-3">
        <div class="card col-md-12 p-3">
            <div class="card-header bg-light col-md-12">
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            <label class="control-label font-weight-bold"></label><br />

                            <input type="radio" id="live" name="status" class="status" value="1" checked="checked">
                            <label for="live">LIVE</label><br />

                            <input type="radio" id="archived" name="status" class="status" value="2">
                            <label for="archived">ARCHIVED</label><br />

                            <input type="radio" id="scheduled" name="status" class="status" value="3">
                            <label for="scheduled">SCHEDULED</label><br />

                            <input type="radio" id="draft" name="status" class="status" value="4">
                            <label for="draft">DRAFT</label>

                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-5">
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="LangCode" class="control-label"></label>
                            <select asp-for="LangCode" class="langCode">
                                <option value="fr-FR">fr-FR</option>
                                <option value="it-IT">it-IT</option>
                                <option value="mt-MT">mt-MT</option>
                            </select>
                            <span asp-validation-for="LangCode" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">Label:</label>
                        </div>
                        <div class="col-md-6">
                            <input class="form-control label" placeholder="Label" />
                            <span asp-validation-for="Label" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">Site ID:</label>
                        </div>
                        <div class="col-md-10">
                            <input class="form-control siteID" placeholder="Site ID" />
                            <span asp-validation-for="SiteId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">URL:</label>
                        </div>
                        <div class="col-md-6">
                            <input class="form-control URL" placeholder="URL" />
                            <span asp-validation-for="Url" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <div class="col-md-3">
                                <div class="form-group form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input showInHP" asp-for="ShowInHp" /> <br /><label class="font-weight-bold">Show in HP</label>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">Title:</label>
                        </div>
                        <div class="col-md-10">
                            <input class="form-control Title" placeholder="Title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">HP Image URL:</label>
                        </div>
                        <div class="col-md-6">
                            <input class="form-control HPInputURL" placeholder="HP Image URL" />
                            <span asp-validation-for="HomePageImageUrl" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">HP Image Alt:</label>
                        </div>
                        <div class="col-md-10">
                            <input class="form-control HPImageAlt" placeholder="HP Image Alt" />
                            <span asp-validation-for="HomePageImageAlt" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">Cover Photo URL:</label>
                        </div>
                        <div class="col-md-6">
                            <input class="form-control coverImageURL" placeholder="Cover Photo URL" />
                            <span asp-validation-for="CoverImageUrl" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">Cover Photo Alt:</label>
                        </div>
                        <div class="col-md-10">
                            <input class="form-control coverPhotoALT" placeholder="Cover Photo Alt" />
                            <span asp-validation-for="CoverImageAlt" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">SEO Score:</label>
                        </div>

                        <div class="col-md-9">
                            <div class="range">
                                <input name="Seoscore" id="seoScoreId" type="range" min="0" max="200000" value="100000" class="slider" oninput="seoScoreOutputId.value = seoScoreId.value">
                                <div class="sliderticks">
                                    <p>0</p>
                                    <p>50000</p>
                                    <p>100000</p>
                                    <p>150000</p>
                                    <p>200000</p>
                                </div>

                                <span asp-validation-for="Seoscore" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-1">
                            <output name="Seoscore" id="seoScoreOutputId" class="font-weight-bold">100000</output>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">Meta Description:</label>
                        </div>

                        <div class="col-md-10">
                            <input class="form-control metaDescription" placeholder="Meta Description" />
                            <span asp-validation-for="MetaDescription" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">Meta Tags:</label>
                        </div>

                        <div class="col-md-10">
                            <div class="form-group">
                                <input class="form-control metaTag" placeholder="Meta tag" />
                                <span asp-validation-for="MetaTags" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">Header Tags:</label>
                        </div>

                        <div class="col-md-10">
                            <textarea class="form-control headerTags" placeholder="Header Tags"></textarea>
                            <span asp-validation-for="HeaderTags" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">Categories:</label>
                        </div>

                        <div class="col-md-8">
                            <input class="form-control categories" placeholder="Categories" />
                            <span asp-validation-for="Categories" class="text-danger"></span>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group form-check">
                                <input class="form-check-input showInPDPCategories" asp-for="ShowInPdpcategories" /><label class="font-weight-bold">Display in PDP</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">Related Products:</label>
                        </div>

                        <div class="col-md-8">
                            <input class="form-control associatedProducts" placeholder="Related Products" />
                            <span asp-validation-for="AssociatedProducts" class="text-danger"></span>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group form-check">
                                <input class="form-check-input showInPDPProducts" asp-for="ShowInPdpproducts" /><label class="font-weight-bold">Display in PDP</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">Content:</label>
                        </div>
                        <div class="col-md-10">
                            <textarea id="mytextarea" class="form-control content"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">Tags:</label>
                        </div>
                        <div class="col-md-10">
                            <input class="form-control tags" placeholder="Tags" />
                            <span asp-validation-for="Tags" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">Redirect URL:</label>
                        </div>
                        <div class="col-md-10">
                            <input class="form-control redirectURL" placeholder="Redirect URL" />
                            <span asp-validation-for="RedirectUrl" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-2">
                            <label class="font-weight-bold lbl">Redirection Type:</label>
                        </div>
                        <div class="col-md-10">
                            <input class="form-control redirectionType" placeholder="Redirection Type" />
                            <span asp-validation-for="RedirectionType" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-light">
                <div class="form-group" style="float:right">
                    <input type="submit" value="Create" class="testController btn btn-secondary" />
                </div>
            </div>
        </div>
        <a type="button" class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.tiny.cloud/1/347g3dndd95pketovuudxrv1az2u9bp87f5z2g47udpq3lm8/tinymce/5/tinymce.min.js" referrerpolicy="origin" /></script>
    <script src="~/js/Create.js"></script>
}